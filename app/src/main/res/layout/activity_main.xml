<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFB1ACAC">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#FFB1ACAC"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/table_row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/cosine"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="cosine"
                android:padding="5dp"
                android:text="@string/cos"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/logarithm"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="log"
                android:padding="5dp"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button28"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="bracket_open"
                android:padding="5dp"
                android:text="("
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button29"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="bracket_close"
                android:padding="5dp"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button30"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="RAD"

                android:padding="5dp"
                android:text="RAD"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:id="@+id/table_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/sine"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="sin"
                android:padding="5dp"
                android:text="@string/sin"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <Button
                android:id="@+id/tan"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="tan"
                android:padding="5dp"
                android:text="@string/tan"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/square_root"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="square_root"
                android:padding="5dp"
                android:text="@string/sqrt"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/natural_log"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="ln"
                android:padding="5dp"
                android:text="@string/ln"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button25"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="INV"
                android:padding="5dp"
                android:text="INV"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:onClick="all_clear"
                android:id="@+id/allClear_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:cornerRadius="20dp"
                android:padding="5dp"
                android:text="AC"
                android:textColor="#CF0707"
                android:textSize="24sp"
                 />

            <ImageButton
                android:onClick="backspace"
                android:id="@+id/backspace_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_backspace_24" />

            <Button
                android:id="@+id/percentage_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:onClick="percentage"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:onClick="add_π"
                android:id="@+id/pi_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="π"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="gone" />

            <Button
                android:onClick="divide"
                android:id="@+id/divide_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="#FFB3B0B0"
                android:padding="5dp"
                android:text="÷"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:cornerRadius="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="add_7"
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:onClick="add_8"
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:onClick="add_9"
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/exponential_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="e"
                android:onClick="add_e"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:visibility="gone" />

            <Button
                android:onClick="multiply"
                android:id="@+id/multiply_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="×"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="add_4"
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:onClick="add_5"
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:onClick="add_6"
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/factorial_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="n!"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:onClick="factorial"
                android:visibility="gone" />

            <Button
                android:onClick="subtract"
                android:id="@+id/subtract_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:onClick="add_1"
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_2"
                android:onClick="add_2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_3"
                android:onClick="add_3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/power_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="^"
                android:onClick="power"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:visibility="gone" />

            <Button
                android:onClick="addition"
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <ImageButton

                android:id="@+id/expand_button"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="expand_features"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_expand_less_24"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_0"
                android:onClick="add_0"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_."
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="."
                android:onClick="fraction"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button34"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="30sp"
                android:visibility="gone" />

            <Button
                android:onClick="evaluate"
                android:id="@+id/evaluate_btn"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#DAD6D6"
                android:padding="5dp"
                android:text="="
                android:textColor="#D61212"
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:onClick="clicked"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:gravity="end"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textColorHint="#3A3636"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calculator_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Calculator"
        android:textColor="#252222"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

</androidx.constraintlayout.widget.ConstraintLayout>